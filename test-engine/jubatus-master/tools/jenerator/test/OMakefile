.PHONY: all clean check
OCAMLINCLUDES += ../src

FILES[] =
  parse_test
  cpp_test
  java_test
  python_test
  ruby_test
  file_util_test
  lib_test

USE_OCAMLFIND = true
OCAMLPACKS[] = oUnit str extlib ppx_deriving.show

PROGRAM = test
OCAML_LIBS += ../src/target

clean:
  rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.cma *.cmxa

.DEFAULT: all

all : $(OCamlProgram $(PROGRAM), $(FILES))

check : all
  ./$(PROGRAM)
