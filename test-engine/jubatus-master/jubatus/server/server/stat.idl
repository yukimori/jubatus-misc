service stat {

  #@cht(1) #@update #@all_and
  bool push(0: string key, 1: double value)

  #@cht(1) #@analysis #@pass
  double sum(0: string key)
  #@cht(1) #@analysis #@pass
  double stddev(0: string key)
  #@cht(1) #@analysis #@pass
  double max(0: string key)
